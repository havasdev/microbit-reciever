<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingTop="10dip"
    android:paddingRight="10dip"
    android:paddingBottom="10dip">

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/message_background"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:text=""
        android:textSize="16dp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView_Temp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_temperature"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text="@string/hyphun"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_TempSym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/temp_symbol"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView_Humi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_humidity"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Humi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text="@string/hyphun"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_HumiSym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/hum_symbol"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView_Pres"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pressure"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Pres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text="@string/hyphun"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_PresSym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pres_symbol"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/end" />
    </FrameLayout>

</LinearLayout>
